<a
        {{ attributes }}
        href="{{ path('app_show_draw_euromillions', { slug: drawEuromillions.slug }) }}"
        class="block max-w-lg p-1 pb-2 font-bold bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-140 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
>
    <h5 class="mb-2 tracking-tight text-gray-900 dark:text-white">{{ drawEuromillions.drawDate|format_datetime('full', 'none') }}</h5>
    {% set balls = drawEuromillions.winningBallsInAscendingOrder|split('-') %}
    {% set stars = drawEuromillions.winningStarsInAscendingOrder|split('-') %}
    {% set drawNumbers %}
        <p class="flex text-center">
            {% for ball in balls %}
                <span class="flex justify-center items-center bg-blue_euromillions w-14 h-14 leading-14 text-white rounded-full mx-1">{{ ball }}</span>
            {% endfor %}
            {% for star in stars %}
                <span class="flex justify-center items-center bg-gold_star bg-no-repeat bg-contain w-14 h-14 leading-14 text-white mx-1 pt-1">{{ star }}</span>
            {% endfor %}
        </p>
    {% endset %}
    {{ drawNumbers }}
</a>
